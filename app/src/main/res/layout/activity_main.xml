<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.dragflexboxlayout.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="click"
        android:visibility="gone"
        />

    <com.example.administrator.dragflexboxlayout.flow.FlowLayout
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:alignContent="space_between"
        app:showDividerVertical="none"
        app:showDividerHorizontal="none"
        android:visibility="visible"
        />


    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerDrawable="@drawable/divider"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:alignContent="flex_end"
        app:alignItems="flex_start"
        app:dividerDrawableVertical="@drawable/divider"
        app:showDividerVertical="none"
        app:showDividerHorizontal="none"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="哇哈哈1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="哇哈哈2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哇哈哈3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哇哈哈4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="哇哈哈5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="哇哈哈6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="哇哈哈7"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="哇哈哈8"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:text="哇哈哈9"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="哇哈哈10"
            />

    </com.google.android.flexbox.FlexboxLayout>
</RelativeLayout>
